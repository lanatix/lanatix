// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Event {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  location      String
  date          DateTime
  fee           Int?
  owner         String
  uniqueName    String
  description   String
  questions     String[]
  registered    Json[]
  attended      Json[]
  admins        String[]
  adminPassword String
  images        String[]
  time          String

  @@unique([owner, uniqueName])
}

model Brand {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  walletAddress String @unique
  username      String @unique
  description   String
}
